<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weather_frame_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cities_fragment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/choose_location_floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rus"
            app:tint="@null"
            app:maxImageSize="56dp"
            android:contentDescription="@string/location_change" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/choose_repository_floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_input_get"
            app:tint="@null"
            app:maxImageSize="40dp"
            android:backgroundTint="@color/black"
            android:contentDescription="@string/location_change" />

    </LinearLayout>



</LinearLayout>
</androidx.core.widget.NestedScrollView>